{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GiGi",
  "version": "0.0.1",
  "identifier": "gigi.app",
  "build": {
    "frontendDist": "../gigi-ts/dist",
    "beforeBuildCommand": "cd gigi-ts && bun run build",
    "beforeDevCommand": "cd gigi-ts && bun run dev",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "GiGi",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; media-src 'self' blob:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}